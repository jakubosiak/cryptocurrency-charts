<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/img_crypto_icon"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:padding="2dp"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_crypto_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="Ethereum" />

        <TextView
            android:id="@+id/tv_crypto_symbol"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:text="ETH" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_crypto_marketcap"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical"
            tools:text="Market Cap" />

        <TextView
            android:id="@+id/tv_crypto_price"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal|center_vertical"
            android:gravity="center_vertical"
            tools:text="Price" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_crypto_change"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_weight="1"
        tools:text="Change%" />

    <ImageView
        android:src="@drawable/ic_star"
        android:id="@+id/img_fav"
        android:layout_width="64dp"
        android:layout_height="64dp"
        tools:src="@drawable/ic_star_border_black_24dp" />
</LinearLayout>